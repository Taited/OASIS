{
    "configurations": [
        {
            "name": "Python: Degub Flickr",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"CUDA_VISIBLE_DEVICES": "3,5,6,7"},
            "args": [
                "--name=flickr",
                "--gpu_ids=0,1,2,3",
                "--dataset_mode=Flickr",
                "--batch_size=20",
                "--dataroot=dataset/flickr"
            ]
        },
        {
            "name": "Python: Inference Flickr",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"CUDA_VISIBLE_DEVICES": "1,3",
            "CUDA_LAUNCH_BLOCKING": "1",
        },
            "args": [
                "--name=flickr_2GPUs",
                "--dataset_mode=custom",
                "--label_dir=./dataset/flickr/train/labels",
                "--image_dir=./dataset/flickr/train/imgs",
                "--netG=scg",
                "--nThread=16",
                "--tf_log",
                "--no_html",
                "--config=config/scgan_flickr.yml"
            ]
        },
        {
            "name": "Python: Inference Flickr Epoch",
            "type": "python",
            "request": "launch",
            "program": "inference_flickr_by_epoch.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"CUDA_VISIBLE_DEVICES": "0"},
            "args": [
                "--name=flickr_4GPUs",
                "--dataset_mode=custom",
                "--batchSize=16",
                "--nThreads=2",
                "--preprocess_mode=fixed",
                "--load_size=512",
                "--crop_size=512",
                "--aspect_ratio=2.0",
                "--num_upsampling_layers=more",
                "--label_dir=./dataset/flickr/train/labels",
                "--image_dir=./dataset/flickr/train/imgs",
                "--label_nc=29",
                "--no_instance",
                "--which_epoch=50",
                "--checkpoints_dir=checkpoints"
            ]
        }
    ]
}